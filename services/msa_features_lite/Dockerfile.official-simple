# Use official MMseqs2 Docker image with GPU support
FROM ghcr.io/soedinglab/mmseqs2:latest

# Set environment variables
ENV DEBIAN_FRONTEND=noninteractive

WORKDIR /app

# Install Python dependencies (using existing Python in the image)
# RUN apt-get update && apt-get install -y \
#     python3-pip \
#     && rm -rf /var/lib/apt/lists/*

# Install Python packages
# RUN pip3 install --no-cache-dir numpy pandas

# Copy service code
COPY services/msa_features_lite/ /app/services/msa_features_lite/

# Set working directory
WORKDIR /app/services/msa_features_lite

# Verify MMseqs2 installation and CUDA support
RUN mmseqs version && \
    mmseqs search --help | grep -i gpu && \
    echo "âœ“ MMseqs2 with CUDA support ready"

# Set default command (can be overridden)
CMD ["python3", "app.py"]
